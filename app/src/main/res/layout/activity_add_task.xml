<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".controllers.activities.AddTaskActivity">

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            app:srcCompat="@drawable/fondo_task"
            android:id="@+id/imageView2"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>


    <TextView
            android:id="@+id/textView"
            android:text="ACTIVIDAD"
            android:textColor="@color/cardview_light_background"
            android:fontFamily="@font/baloo"
            android:textSize="36sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="50dp"
            android:layout_marginTop="120dp"/>

    <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:background="@null"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:id="@+id/textViewTaskName"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="50dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="50dp"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            android:layout_marginTop="50dp"
            android:layout_width="match_parent">
        <com.google.android.material.textfield.TextInputEditText
                android:hint="Nombre de la actividad "
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="18sp"
                android:id="@+id/editTextEditName"
                android:textAlignment="center" android:singleLine="false"
                android:maxLines="3"/>
    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:background="@null"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:id="@+id/textView12"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="50dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="50dp"
            app:layout_constraintHorizontal_bias="0.5"
            android:layout_marginTop="30dp"
            app:layout_constraintTop_toBottomOf="@+id/textViewTaskName"
            android:layout_width="match_parent">
        <com.google.android.material.textfield.TextInputEditText
                android:hint="DescripciÃ³n de la actividiad"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:textSize="18sp"
                android:id="@+id/textDisease"
                android:textAlignment="center"
                android:singleLine="false"
                android:maxLines="3"/>
    </com.google.android.material.textfield.TextInputLayout>


    <TextView
            android:text="Fecha"
            android:layout_width="348dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView7"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintHorizontal_bias="0.489"
            android:textAlignment="center"
            android:layout_marginTop="30dp"
            app:layout_constraintTop_toBottomOf="@+id/textView12"/>

    <TextView
            android:text="--/--/----"
            android:padding="8dp"
            android:background="@drawable/round_empty_border"
            android:textAlignment="center"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/datePickerTextView"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:clickable="true"
            app:layout_constraintHorizontal_bias="0.497"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/textView7"/>

    <Button
            android:id="@+id/button2"
            android:text="GUARDAR"
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:layout_margin="8dp"
            android:textColor="#fff"
            android:background="@drawable/btn_roundshape"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/datePickerTextView"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>