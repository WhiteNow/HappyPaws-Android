<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".controllers.activities.PromoActivity">

    <com.androidnetworking.widget.ANImageView
            android:id="@+id/promo_imageview"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:scaleType="fitXY"

    />

    <TextView  android:id="@+id/promo_name"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
              android:text="Nombre promocion"
              android:textSize="24sp"
               android:textColor="#000"
              android:fontFamily="@font/baloo"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintEnd_toEndOf="parent"
              app:layout_constraintTop_toBottomOf="@+id/promo_imageview"
              android:layout_marginTop="8dp"
              android:layout_marginStart="12dp"
              android:layout_marginEnd="12dp"
    />

    <TextView android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="Descripcion de la promocion"
              android:textSize="16sp"
              android:fontFamily="@font/baloo"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintEnd_toEndOf="parent"
              app:layout_constraintTop_toBottomOf="@+id/promo_name"
              android:layout_marginTop="8dp"
              android:layout_marginStart="12dp"
              android:layout_marginEnd="12dp"
              android:id="@+id/text_description"/>
    <TextView
            android:text="Precio:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_price_label" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/text_description" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp"
            android:fontFamily="@font/baloo"
    />
    <TextView
            android:text="Fecha de expiraciÃ³n"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_expiration_label" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/text_price_label" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp"
            android:fontFamily="@font/baloo"
    />
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_price" app:layout_constraintStart_toEndOf="@+id/text_price_label"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@+id/text_price_label"
            android:fontFamily="@font/baloo"
            android:textColor="#000"
            android:textSize="18dp"
    />
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_expiration" app:layout_constraintStart_toEndOf="@+id/text_expiration_label"
            android:layout_marginStart="12dp"
            app:layout_constraintTop_toTopOf="@+id/text_expiration_label"
            android:fontFamily="@font/baloo"
            android:textColor="#000"
            android:textSize="18dp"
    />

</androidx.constraintlayout.widget.ConstraintLayout>