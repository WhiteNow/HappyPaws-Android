<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/newPetLayout"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".controllers.activities.NewPetActivity">

    <com.google.android.material.tabs.TabLayout
            android:id="@+id/tabLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:tabTextColor="#a9ccbd"
            app:layout_constraintTop_toTopOf="parent"
            app:tabGravity="fill" app:tabIndicatorFullWidth="false" app:tabMode="fixed"
            android:textAlignment="center"
            android:layout_marginStart="50dp"
            app:tabSelectedTextColor="#e9aeb0"
            app:tabIndicatorHeight="0dp"
            android:layout_marginEnd="50dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"

            android:layout_marginTop="10dp" app:tabTextAppearance="@style/MineCustomTabText"
            android:contextClickable="false" android:clickable="false"/>
    <androidx.viewpager.widget.ViewPager
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@+id/tabLayout" app:layout_constraintBottom_toBottomOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>