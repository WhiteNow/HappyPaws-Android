<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".controllers.activities.SignInActivity">
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

        <TextView
                android:id="@+id/textViewSignIn"
                android:text="Ingresar"
                android:fontFamily="sans-serif-medium"
                android:textSize="32dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="45dp"
                app:layout_constraintTop_toTopOf="parent"
                android:gravity="center"/>

        <TextView
                android:id="@+id/textViewAccount"
                android:text="Cuenta"
                android:fontFamily="sans-serif-medium"
                android:textSize="18dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="45dp"
                app:layout_constraintTop_toBottomOf="@+id/textViewSignIn"/>


        <EditText

                android:id="@+id/editTextAccount"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:inputType="textPersonName"
                android:hint="Nombre"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/textViewAccount"
                android:layout_marginEnd="50dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="50dp"
                app:layout_constraintStart_toStartOf="parent"/>

        <TextView
                android:id="@+id/textViewPasswordIn"
                android:text="Contrasenia"
                android:fontFamily="sans-serif-medium"
                android:textSize="18dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="45dp"
                app:layout_constraintTop_toBottomOf="@+id/editTextAccount"/>


        <EditText

                android:id="@+id/editTextPasswordIn"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:inputType="textPersonName"
                android:hint="Contrasenia"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/textViewPasswordIn"
                android:layout_marginEnd="50dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="50dp"
                app:layout_constraintStart_toStartOf="parent"/>

        <Button
                android:id="@+id/buttonLogin"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_roundshape"
                app:layout_constraintTop_toBottomOf="@id/editTextPasswordIn"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="60dp"
                android:layout_marginStart="50dp"
                android:layout_marginEnd="50dp"
                android:text="Ingresar"
                android:textColor="@color/cardview_light_background"
        />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>