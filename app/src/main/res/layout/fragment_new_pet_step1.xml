<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"

                                                   tools:context=".controllers.fragments.NewPetStep1"

                                                   android:id="@+id/newPetStep1Layout">

    <RadioGroup
            android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/radioGridGroup" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/textViewTipoMascota" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:orientation="vertical">
        <RadioGroup android:layout_height="wrap_content" android:layout_width="wrap_content"
                    android:orientation="horizontal" android:id="@+id/speciesRadioGroup">
            <RadioButton
                    android:background="@drawable/radio_button_selector"
                    android:text="@string/perro"
                    android:layout_width="100dp"

                    android:layout_height="50dp"
                    android:id="@+id/btnDog"
                    android:button="@android:color/transparent" android:textSize="20sp" android:textAlignment="center"
                    android:textColor="@drawable/radio_button_text_selector" android:textStyle="bold"
            />
            <RadioButton
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/radio_button_selector"
                    android:text="@string/gato"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:id="@+id/btnCat"
                    android:button="@android:color/transparent" android:textSize="20sp" android:textAlignment="center"
                    android:textColor="@drawable/radio_button_text_selector" android:textStyle="bold"
            />
            <RadioButton
                    android:background="@drawable/radio_button_selector"
                    android:text="@string/conejo"
                    android:layout_width="100dp"
                    android:layout_height="50dp"

                    android:id="@+id/btnBunny"
                    android:button="@android:color/transparent" android:textSize="20sp" android:textAlignment="center"
                    android:textColor="@drawable/radio_button_text_selector" android:textStyle="bold"
            />
        </RadioGroup>
        <RadioGroup android:layout_height="wrap_content" android:layout_width="wrap_content"
                    android:layout_marginTop="15dp" android:orientation="horizontal" android:id="@+id/rg2">
            <RadioButton
                    android:background="@drawable/radio_button_border"
                    android:text="@string/tortuga"
                    android:layout_width="100dp"

                    android:layout_height="50dp"
                    android:id="@+id/btnTurtle"
                    android:button="@android:color/transparent" android:textSize="20sp" android:textAlignment="center"
                    android:textColor="#a9ccbd"
                    android:textStyle="bold" app:layout_constraintTop_toBottomOf="@+id/btnDog"
            />
            <RadioButton
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/radio_button_border"
                    android:text="@string/ave"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:id="@+id/btnBird"
                    android:button="@android:color/transparent" android:textSize="20sp" android:textAlignment="center"
                    android:textColor="#a9ccbd" android:textStyle="bold"
                    app:layout_constraintTop_toTopOf="@+id/btnBunny"
            />
            <RadioButton
                    android:background="@drawable/radio_button_border"
                    android:text="@string/pez"
                    android:layout_width="100dp"

                    android:layout_height="50dp"
                    android:id="@+id/btnFish"
                    android:button="@android:color/transparent" android:textSize="20sp" android:textAlignment="center"


                    android:textColor="#a9ccbd" android:textStyle="bold"
            />
        </RadioGroup>
        <RadioGroup android:layout_height="wrap_content" android:layout_width="wrap_content"
                    android:layout_marginTop="15dp" android:orientation="horizontal" android:id="@+id/rg3">
            <RadioButton

                    android:background="@drawable/radio_button_border"
                    android:text="@string/roedor"
                    android:layout_width="100dp"

                    android:layout_height="50dp"

                    android:id="@+id/btnRodent"
                    android:button="@android:color/transparent" android:textSize="20sp" android:textAlignment="center"
                    android:textColor="#a9ccbd" android:textStyle="bold"
            />
            <RadioButton
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/radio_button_border"
                    android:text="@string/hamster"
                    android:layout_width="100dp"

                    android:layout_height="50dp"

                    android:id="@+id/btnHamster"
                    android:button="@android:color/transparent" android:textSize="20sp" android:textAlignment="center"
                    android:textColor="#a9ccbd" android:textStyle="bold"
            />
            <RadioButton
                    android:background="@drawable/radio_button_border"
                    android:text="@string/reptil"
                    android:layout_width="100dp"

                    android:layout_height="50dp"

                    android:id="@+id/btnReptil"
                    android:button="@android:color/transparent" android:textSize="20sp" android:textAlignment="center"
                    android:textColor="#a9ccbd" android:textStyle="bold"
            />
        </RadioGroup>

    </RadioGroup>

    <Button
            android:text="Siguiente"
            android:layout_width="234dp"
            android:layout_height="50dp"
            android:id="@+id/newPetStep1ButtonNext"
            android:backgroundTint="#A9CCBD"
            android:textColor="@android:color/white" android:textSize="16sp"
            android:fontFamily="sans-serif" android:textAllCaps="true"
            app:layout_constraintTop_toBottomOf="@+id/radioGridGroup"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginEnd="50dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="50dp"
            app:layout_constraintStart_toStartOf="parent" android:background="@drawable/btn_roundshape"
            android:textStyle="bold"/>

    <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/camera"
            android:id="@+id/imageView"
            app:layout_constraintEnd_toEndOf="parent"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:contentDescription="TODO"
            android:layout_marginTop="10dp"/>
    <TextView
            android:text="Tipo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewTipoMascota" android:textSize="30sp"

            android:layout_marginTop="20dp"


            app:layout_constraintTop_toBottomOf="@+id/textInputLayout"
            app:layout_constraintStart_toStartOf="@+id/textInputLayout"/>
    <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="348dp"
            android:layout_height="wrap_content"
            android:id="@+id/textInputLayout"
            app:layout_constraintTop_toBottomOf="@+id/imageView" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginTop="10dp">


        <com.google.android.material.textfield.TextInputEditText
                android:singleLine="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nombre de la mascota" android:textSize="16sp" android:id="@+id/textInputPetName"
                android:textAlignment="center"/>
    </com.google.android.material.textfield.TextInputLayout>


</androidx.constraintlayout.widget.ConstraintLayout>