            android:textSize="20dp"
            android:layout_marginStart="40dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/imageViewPetPic"/>


    <ImageView
            android:layout_width="46dp"
            android:layout_height="41dp"
            tools:srcCompat="@tools:sample/avatars"
            android:id="@+id/imageViewOwner3"
            app:layout_constraintTop_toTopOf="@+id/floatingActionButtonAddOwner"
            app:layout_constraintBottom_toBottomOf="@+id/floatingActionButtonAddOwner"
