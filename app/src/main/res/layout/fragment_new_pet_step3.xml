<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"

                                                   tools:context=".controllers.fragments.NewPetStep3"

                                                   android:id="@+id/newPetStep3Layout">


    <Button
            android:text="Guardar"
            android:layout_width="234dp"
            android:layout_height="60dp"
            android:id="@+id/newPetStep3ButtonFinish"
            android:backgroundTint="#A9CCBD"
            android:textColor="@android:color/white" android:textSize="24sp"
            android:fontFamily="sans-serif"
            android:background="@drawable/btn_roundshape"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView4" android:textStyle="bold" android:textAllCaps="true"/>

    <com.google.android.material.textfield.TextInputLayout
            style= "@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:background="@null"
            android:textAlignment="center"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView12"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.5"
            android:layout_marginTop="50dp" app:layout_constraintTop_toBottomOf="@+id/textView9">
        <com.google.android.material.textfield.TextInputEditText
                android:hint="Enfermedades"

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="18sp" android:id="@+id/textDisease"
                android:textAlignment="center" android:singleLine="false"
                android:maxLines="3"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:background="@null"
            android:textAlignment="center"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView9"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:clickable="true"
            app:layout_constraintHorizontal_bias="0.5"
            android:layout_marginTop="10dp" app:layout_constraintTop_toTopOf="parent">
        <com.google.android.material.textfield.TextInputEditText
                android:hint="Vacunas"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/round_empty_border"
                android:textSize="18sp" android:id="@+id/textVaccines"
                android:textAlignment="center" android:singleLine="false"
                android:maxLines="3"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
            style= "@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:background="@null"
            android:textAlignment="center"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView4"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:clickable="true"
            app:layout_constraintHorizontal_bias="0.5"
            android:layout_marginTop="50dp" app:layout_constraintTop_toBottomOf="@+id/textView12">
        <com.google.android.material.textfield.TextInputEditText
                android:hint="CirujÃ­as"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/round_empty_border"
                android:textSize="18sp" android:id="@+id/textSurgeries"
                android:textAlignment="center" android:singleLine="false"
                android:maxLines="3"/>
    </com.google.android.material.textfield.TextInputLayout>

</androidx.constraintlayout.widget.ConstraintLayout>